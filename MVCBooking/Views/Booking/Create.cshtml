@{
    @model HotelBooking
    <h1>Create</h1>
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    <h5>Create a new booking</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Booking" asp-action="Create"
                          method="post">
                        <div class="mb-3">
                            <label class="form-label">Guest Name</label>
                            <input asp-for=GuestName type="text" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Room Number</label>
                            <input asp-for=RoomNumber type="number" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                </div>
            </div>
        </div>
    </div>
}
